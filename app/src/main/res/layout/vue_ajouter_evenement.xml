<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vue.AjouterEvenement">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Nom de l'endroit"
        app:layout_constraintEnd_toStartOf="@+id/vue_ajouter_evenement_champ_description"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/vue_ajouter_evenement_champ_nom_endroit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Endroit"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_champ_description" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="4dp"
        android:text="Nom"
        app:layout_constraintEnd_toStartOf="@+id/vue_ajouter_evenement_champ_nom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/vue_ajouter_evenement_champ_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Description"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_champ_nom" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Description"
        app:layout_constraintEnd_toStartOf="@+id/vue_ajouter_evenement_champ_description"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:text="Ajouter un evenement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/vue_ajouter_evenement_champ_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nom"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/vue_ajouter_evenement_action_valider"
        android:layout_width="120dp"
        android:layout_height="69dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="168dp"
        android:text="Valider"
        app:layout_constraintStart_toEndOf="@+id/vue_ajouter_evenement_action_retour"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_action_choisir_heure" />

    <Button
        android:id="@+id/vue_ajouter_evenement_action_retour"
        android:layout_width="120dp"
        android:layout_height="69dp"
        android:layout_marginStart="32dp"
        android:text="Retour à la Carte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_action_annulation" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Échéance:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_champ_nom_endroit" />

    <TextView
        android:id="@+id/vue_ajouter_evenement_texte_heure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="00:00"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_champ_nom_endroit" />

    <Button
        android:id="@+id/vue_ajouter_evenement_action_choisir_heure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="Changer l'heure"
        app:layout_constraintStart_toEndOf="@+id/vue_ajouter_evenement_texte_heure"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_champ_nom_endroit" />

    <Button
        android:id="@+id/vue_ajouter_evenement_action_annulation"
        android:layout_width="120dp"
        android:layout_height="69dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:text="Annuler Ajout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_texte_position" />

    <TextView
        android:id="@+id/vue_ajouter_evenement_texte_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Position: "
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="32dp" />
</android.support.constraint.ConstraintLayout>
