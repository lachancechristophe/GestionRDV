<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vue.AjouterEvenement">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Nom"
        app:layout_constraintEnd_toStartOf="@+id/vue_ajouter_evenement_champ_nom"
        tools:layout_editor_absoluteY="49dp" />

    <EditText
        android:id="@+id/vue_ajouter_evenement_champ_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Description"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_champ_nom"
        tools:layout_editor_absoluteX="99dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        app:layout_constraintEnd_toStartOf="@+id/vue_ajouter_evenement_champ_description"
        tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter un evenement"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="153dp" />

    <EditText
        android:id="@+id/vue_ajouter_evenement_champ_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nom"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="99dp" />

    <Button
        android:id="@+id/vue_ajouter_evenement_action_valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="68dp"
        android:text="Valider"
        app:layout_constraintStart_toEndOf="@+id/vue_ajouter_evenement_champ_date"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_action_choisir_heure" />

    <Button
        android:id="@+id/vue_ajouter_evenement_action_retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:text="Retour"
        app:layout_constraintStart_toEndOf="@+id/vue_ajouter_evenement_champ_date"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_action_valider" />

    <CalendarView
        android:id="@+id/vue_ajouter_evenement_champ_date"
        android:layout_width="261dp"
        android:layout_height="295dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_action_choisir_heure"
        tools:layout_editor_absoluteX="35dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Échéance:"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_champ_description"
        tools:layout_editor_absoluteX="48dp" />

    <TextView
        android:id="@+id/vue_ajouter_evenement_texte_heure_lire_avant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="12:00 PM"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_champ_description" />

    <Button
        android:id="@+id/vue_ajouter_evenement_action_choisir_heure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Changer l'heure"
        app:layout_constraintStart_toEndOf="@+id/vue_ajouter_evenement_texte_heure_lire_avant"
        app:layout_constraintTop_toBottomOf="@+id/vue_ajouter_evenement_champ_description" />
</android.support.constraint.ConstraintLayout>